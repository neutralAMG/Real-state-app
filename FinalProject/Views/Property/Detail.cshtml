@{
    ViewData["Title"] = "Property Details";
}

<div class="container mx-auto px-4 py-6">
    <div class="bg-white p-6 rounded-lg shadow-lg">
        <!-- Property Images Slider -->
        <div class="mb-6">
            <div id="property-images" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">

                        <img src="https://www.sbid.org/wp-content/uploads/2021/12/V.Concept-by-Victoria-Vitkovskaya-Almond-Apartment16.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="https://st.houzz.com/simgs/ef11653b0db38dd6_8-1917/traditional-exterior.jpg" class="d-block w-100" alt="...">

                        <img src="https://www.sbid.org/wp-content/uploads/2021/12/V.Concept-by-Victoria-Vitkovskaya-Almond-Apartment16.jpg" class="d-block w-100" alt="Property Image 1">
                    </div>
                    <div class="carousel-item">
                        <img src="https://www.luxurychicagoapartments.com/wp-content/uploads/2023/03/DSC_0351-1952260.jpg" class="d-block w-100" alt="Property Image 2">
                    </div>
                    <div class="carousel-item">
                        <img src="https://www.apartments.com/images/librariesprovider2/blank-images/parkline-apartment-in-miami-flba486679-f59b-475d-885a-ae52659d1e51.jpg?sfvrsn=264e5d72_1" class="d-block w-100" alt="Property Image 2">
                    </div>
                    <div class="carousel-item">
                        <img src="https://www.thespruce.com/thmb/QeB-IPpXBpEnmPAfNQ7xXOxHnVQ=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/Have-it-all-studio-apartment-587e9d153df78c17b6d4f076.jpg" class="d-block w-100" alt="Property Image 2">

                    </div>
                    <!-- Add more images as needed -->
                </div>
                <a class="carousel-control-prev" href="#property-images" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#property-images" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <h1 class="text-4xl font-bold mb-4">Property Details</h1>

        <!-- Property Information -->
        <div class="mb-6">

            <p><strong>Property Code:</strong> AP1234</p>

            <p><strong>Property Code:</strong> @ViewData["PropertyCode"]</p>

            <p><strong>Property Type:</strong> Apartment</p>
            <p><strong>Sale Type:</strong> Rent</p>
            <p><strong>Price:</strong> $850,000</p>
            <p><strong>Bedrooms:</strong> 2</p>
            <p><strong>Bathrooms:</strong> 2</p>
            <p><strong>Size:</strong> 120 sqm</p>
            <p><strong>Description:</strong> This beautiful apartment is located in the heart of the city and offers stunning views...</p>
            <p><strong>Improvements:</strong> New kitchen, renovated bathrooms, new flooring...</p>
        </div>

        <!-- Agent Information -->
        <div class="bg-gray-100 p-4 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold mb-4">Agent Information</h2>
            <div class="flex items-center mb-4">
                <img src="https://via.placeholder.com/150" alt="Agent Photo" class="w-20 h-20 rounded-full mr-4">
                <div>
                    <p><strong>Name:</strong> John Doe</p>
                    <p><strong>Phone:</strong> (123) 456-7890</p>
                    <p><strong>Email:</strong> john.doe@example.com</p>
                </div>
            </div>
        </div>
    </div>

</div>
