@{
}
@if (TempData["ErrorMessage"] is not null)
{
    <div class=" alert alert-danger d-block text-center">
        <p>@TempData["ErrorMessage"]</p>
    </div>

}
@if (TempData["SuccessMessage"] is not null)
{
    <div class=" alert alert-success d-block text-center">
        <p>@TempData["SuccessMessage"]</p>
    </div>

}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Improvements List</h1>

    <div class="flex justify-end mb-4">
        <a href="@Url.Action("CreatePerk", "Perk")" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200">
            Create Improvement
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-300 rounded-lg shadow-md">
            <thead>
                <tr class="bg-gray-100 border-b border-gray-300">
                    <th class="px-6 py-3 text-center text-gray-700 font-semibold">Improvement Name</th>
                    <th class="px-6 py-3 text-center text-gray-700 font-semibold">Description</th>
                    <th class="px-6 py-3 text-center text-gray-700 font-semibold">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr class="border-b border-gray-300">
                    <td class="px-6 py-4 text-center text-gray-700">New Feature A</td>
                    <td class="px-6 py-4 text-center text-gray-700">Enhancement of feature A with additional functionalities.</td>
                    <td class="px-6 py-4 text-center">
                        <a href="@Url.Action("EditPerk", "Perk")" class="bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-700 transition-colors duration-200">
                            Edit
                        </a>
                        <button type="button" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors duration-200 ml-2" onclick="return confirm('Are you sure you want to delete this perk?');">
                            Delete
                        </button>
                    </td>
                </tr>
                <tr class="border-b border-gray-300">
                    <td class="px-6 py-4 text-center text-gray-700">Bug Fix B</td>
                    <td class="px-6 py-4 text-center text-gray-700">Resolved issue B that affected system performance.</td>
                    <td class="px-6 py-4 text-center">
                        <a href="@Url.Action("EditPerk", "Perk")" class="bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-700 transition-colors duration-200">
                            Edit
                        </a>
                        <button type="button" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors duration-200 ml-2" onclick="return confirm('Are you sure you want to delete this perk?');">
                            Delete
                        </button>
                    </td>
                </tr>
                <!-- Add more rows as needed -->
            </tbody>
        </table>
    </div>
</div>
