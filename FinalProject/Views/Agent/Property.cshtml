@{
    ViewData["Title"] = "Home Page";
}

<div class="container mx-auto px-4 py-6">
    <div class="text-center mb-8">
        <h1 class="text-4xl font-bold">Welcome</h1>
        <p class="mt-2">Find your dream property with <strong>Chequeando</strong></p>
    </div>

    <!-- Search Bar -->
    <div class="mb-8">
        <div class="relative">
            <input type="text" class="w-full p-3 border border-gray-300 rounded-lg" placeholder="Search for properties by code...">
            <button class="absolute top-0 right-0 mt-2 mr-2 text-white bg-indigo-600 hover:bg-indigo-700 p-3 rounded-lg">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>

    <!-- Properties List -->
    <div class="w-full px-4 mb-8">
        <div class="bg-white p-6 rounded-lg shadow-lg h-screen overflow-y-auto">
            <h2 class="text-2xl font-bold mb-4">Available Properties</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Property Card -->
                <a href="@Url.Action("Detail", "Property")" class="property-card border border-gray-300 rounded-lg overflow-hidden shadow-sm block hover:shadow-lg">
                    <img src="https://www.sbid.org/wp-content/uploads/2021/12/V.Concept-by-Victoria-Vitkovskaya-Almond-Apartment16.jpg" alt="Property Image" class="w-full">
                    <div class="p-4">
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-code mr-2"></i> Property Code: AP1234
                        </p>
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-tag mr-2"></i> Sale Type: Rent
                        </p>
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-dollar-sign mr-2"></i> Price: $850,000
                        </p>
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-bed mr-2"></i> Bedrooms: 2
                        </p>
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-bath mr-2"></i> Bathrooms: 2
                        </p>
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-ruler-combined mr-2"></i> Size: 120 sqm
                        </p>
                    </div>
                </a>
                <!-- Repeat Property Card as needed -->
                <a href="/property/details/HS5678" class="property-card border border-gray-300 rounded-lg overflow-hidden shadow-sm block hover:shadow-lg">
                    <img src="https://st.houzz.com/simgs/ef11653b0db38dd6_8-1917/traditional-exterior.jpg" alt="Property Image" class="w-full">
                    <div class="p-4">
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-code mr-2"></i> Property Code: HS5678
                        </p>
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-tag mr-2"></i> Sale Type: Sale
                        </p>
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-dollar-sign mr-2"></i> Price: $1,200,000
                        </p>
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-bed mr-2"></i> Bedrooms: 4
                        </p>
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-bath mr-2"></i> Bathrooms: 3
                        </p>
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-ruler-combined mr-2"></i> Size: 200 sqm
                        </p>
                    </div>
                </a>
                <!-- Repeat Property Card as needed -->
                <!-- Add more Property Cards as needed with updated details -->
            </div>
        </div>
    </div>
</div>
