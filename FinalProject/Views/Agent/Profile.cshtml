@model FinalProject.Core.Application.Models.User.UserModel
@{
    ViewData["Title"] = "Edit Agent Information";
}

<div class="container mx-auto px-4 py-6">
    <div class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 p-10 rounded-lg shadow-lg">
        <div class="bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-3xl font-bold text-center mb-6 text-gray-800">Edit Agent Information</h2>
            <form id="editAgentForm" enctype="multipart/form-data" method="post" asp-action="Profile" asp-controller="Agent">

                <input type="hidden" class="visually-hidden" name="id" value="@Model.Id"/>
                <input type="hidden" class="visually-hidden" name="ImgProfileUrl" value="@Model.ImgProfileUrl" />

                <div class="mb-6">
                    <label for="FirstName" class="block text-gray-700 text-lg font-semibold mb-2">First Name</label>
                    <input type="text" id="FirstName" name="FirstName" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" required value="@Model.FirstName">
                </div>
                <div class="mb-6">
                    <label for="LastName" class="block text-gray-700 text-lg font-semibold mb-2">Last Name</label>
                    <input type="text" id="LastName" name="LastName" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" required value="@Model.LastName">
                </div>
                <div class="mb-6">
                    <label for="PhoneNumber" class="block text-gray-700 text-lg font-semibold mb-2">Phone</label>
                    <input type="tel" id="PhoneNumber" name="PhoneNumber" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" required value="@Model.PhoneNumber">
                </div>
                <div class="mb-6">
                    <label for="file" class="block text-gray-700 text-lg font-semibold mb-2">Photo</label>
                    <input type="file" id="file" name="file" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    <img src="@Url.Content(Model.ImgProfileUrl)" alt="Current Photo" class="w-24 h-24 rounded-full mt-4 mx-auto">
                </div>
                <div class="flex justify-between mt-6">
                    <a  href="@Url.Action("IndexAgent", "Home")" class="btn bg-gray-300 text-gray-700 p-3 rounded-lg hover:bg-gray-400">
                        Back to Home
                    </a>
                    <button type="submit" class="bg-indigo-600 text-white p-3 rounded-lg hover:bg-indigo-700">
                        Save Information
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
  

