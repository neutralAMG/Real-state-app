@model List<FinalProject.Core.Application.Models.Property.PropertyModel>
@{
    ViewData["Title"] = "Registered Properties";
}

<div class="container mx-auto px-4 py-6 bg-gray-100 min-h-screen">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-4xl font-bold text-indigo-600">Registered Properties</h1>
        <img src="https://via.placeholder.com/50" alt="Agent Photo" class="w-16 h-16 rounded-full">
    </div>

    <div class="bg-white p-6 rounded-lg shadow-lg overflow-y-auto">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800">Available Properties</h2>
            <a href="@Url.Action("Create", "Property")" class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors duration-200">
                Create New Property
            </a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var property in Model)
            {
                <a href="@Url.Action("Detail", "Property", new {id = property.Id})" class="property-card border border-gray-300 rounded-lg overflow-hidden shadow-sm block hover:shadow-lg">
                    <img src="@Url.Content(property.PropertyImagesUrls.First().ImgUrl)" alt="Property Image" class="w-full">
                    <div class="p-4">
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-code mr-2"></i> Property Code: @property.PropertyCode
                        </p>
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-tag mr-2"></i> Sale Type: @property.SellTypeName
                        </p>
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-dollar-sign mr-2"></i> Price: @property.PropertyPrice
                        </p>
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-bed mr-2"></i> Bedrooms: @property.AmountOfBedrooms
                        </p>
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-bath mr-2"></i> Bathrooms: @property.AmountOfBathrooms
                        </p>
                        <p class="text-gray-700 flex items-center">
                            <i class="fas fa-ruler-combined mr-2"></i> Size: @property.SizeInMeters sqm
                        </p>
                        <div class="flex justify-between">
                            <a href="@Url.Action("EditProperty", "Property", new {id = property.Id})" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200">
                                Edit
                            </a>
                            <form action="@Url.Action("Delete", "Property", new { id = property.Id })" method="post" class="inline">
                                <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors duration-200" onclick="return confirm('Are you sure you want to delete this property?');">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </a>
            }

            <!-- Property Card -->
            <div class="property-card border border-gray-300 rounded-lg overflow-hidden shadow-sm block hover:shadow-lg transition-shadow duration-200">
                <img src="https://www.sbid.org/wp-content/uploads/2021/12/V.Concept-by-Victoria-Vitkovskaya-Almond-Apartment16.jpg" alt="Property Image" class="w-full h-48 object-cover">
                <div class="p-4">
                    <p class="text-gray-700 flex items-center mb-2">
                        <i class="fas fa-code mr-2"></i> Property Code: AP1234
                    </p>
                    <p class="text-gray-700 flex items-center mb-2">
                        <i class="fas fa-tag mr-2"></i> Sale Type: Rent
                    </p>
                    <p class="text-gray-700 flex items-center mb-2">
                        <i class="fas fa-dollar-sign mr-2"></i> Price: $850,000
                    </p>
                    <p class="text-gray-700 flex items-center mb-2">
                        <i class="fas fa-bed mr-2"></i> Bedrooms: 2
                    </p>
                    <p class="text-gray-700 flex items-center mb-2">
                        <i class="fas fa-bath mr-2"></i> Bathrooms: 2
                    </p>
                    <p class="text-gray-700 flex items-center mb-4">
                        <i class="fas fa-ruler-combined mr-2"></i> Size: 120 sqm
                    </p>
                    <div class="flex justify-between">
                        <a href="@Url.Action("EditProperty", "Property")" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200">
                            Edit
                        </a>
                        <form action="@Url.Action("Delete", "Property", new { id = "AP1234" })" method="post" class="inline">
                            <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors duration-200" onclick="return confirm('Are you sure you want to delete this property?');">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Repeat Property Card as needed -->
            <div class="property-card border border-gray-300 rounded-lg overflow-hidden shadow-sm block hover:shadow-lg transition-shadow duration-200">
                <img src="https://st.houzz.com/simgs/ef11653b0db38dd6_8-1917/traditional-exterior.jpg" alt="Property Image" class="w-full h-48 object-cover">
                <div class="p-4">
                    <p class="text-gray-700 flex items-center mb-2">
                        <i class="fas fa-code mr-2"></i> Property Code: HS5678
                    </p>
                    <p class="text-gray-700 flex items-center mb-2">
                        <i class="fas fa-tag mr-2"></i> Sale Type: Sale
                    </p>
                    <p class="text-gray-700 flex items-center mb-2">
                        <i class="fas fa-dollar-sign mr-2"></i> Price: $1,200,000
                    </p>
                    <p class="text-gray-700 flex items-center mb-2">
                        <i class="fas fa-bed mr-2"></i> Bedrooms: 4
                    </p>
                    <p class="text-gray-700 flex items-center mb-2">
                        <i class="fas fa-bath mr-2"></i> Bathrooms: 3
                    </p>
                    <p class="text-gray-700 flex items-center mb-4">
                        <i class="fas fa-ruler-combined mr-2"></i> Size: 200 sqm
                    </p>
                    <div class="flex justify-between">
                        <a href="@Url.Action("Edit", "Property", new { id = "HS5678" })" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200">
                            Edit
                        </a>
                        <form action="@Url.Action("Delete", "Property", new { id = "HS5678" })" method="post" class="inline">
                            <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors duration-200" onclick="return confirm('Are you sure you want to delete this property?');">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Repeat Property Card as needed -->
            <!-- Add more Property Cards as needed with updated details -->
        </div>
    </div>
</div>
