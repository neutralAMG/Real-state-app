                        <button type="button" class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors duration-200" onclick="return confirm('Are you sure?');">
                            Activate/Deactivate
                        </button>
                        <a href="@Url.Action("EditAdmin", "Admin")" class="bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-700 transition-colors duration-200 ml-2">
                            Edit
                        </a>
                    </td>
