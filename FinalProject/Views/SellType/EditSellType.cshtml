@model FinalProject.Core.Application.Models.SellType.SellTypeModel

@if (TempData["ErrorMessage"] is not null)
{
    <div class=" alert alert-danger d-block text-center">
        <p>@TempData["ErrorMessage"]</p>
    </div>

}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-yellow-700">Edit Sales Type</h1>

    <form method="post" asp-action="EditSellType" asp-controller="SellType" class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md border-t-4 border-yellow-500">
        <input type="hidden" class="visually-hidden" name="id" value="@Model.Id"/>
        <div class="mb-4">
            <label for="Name" class="block text-gray-700 font-semibold mb-2">Type Name</label>
            <input type="text" id="Name" name="Name" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-yellow-500" value="@Model.Name" required>
        </div>

        <div class="mb-4">
            <label for="Description" class="block text-gray-700 font-semibold mb-2">Description</label>
            <textarea id="Description" name="Description" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-yellow-500" rows="4" required>@Model.Description</textarea>
        </div>

        <div class="flex justify-between">
            <a href="@Url.Action("Index", "SellType")" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200">
                Back to List
            </a>
            <button type="submit" class="bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-700 transition-colors duration-200">
                Save Changes
            </button>
        </div>
    </form>
</div>
