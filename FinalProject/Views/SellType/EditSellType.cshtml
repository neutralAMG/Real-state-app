}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-yellow-700">Edit Sales Type</h1>

    <form method="post" action="@Url.Action("EditSalesType", "SalesTypeController")" class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md border-t-4 border-yellow-500">
        <div class="mb-4">
            <label for="typeName" class="block text-gray-700 font-semibold mb-2">Type Name</label>
            <input type="text" id="typeName" name="typeName" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-yellow-500" value="Residential" required>
        </div>

        <div class="mb-4">
            <label for="description" class="block text-gray-700 font-semibold mb-2">Description</label>
            <textarea id="description" name="description" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-yellow-500" rows="4" required>Residential properties for single-family homes.</textarea>
        </div>

        <div class="flex justify-between">
            <a href="@Url.Action("MantSellType", "SellType")" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-200">
                Back to List
            </a>
            <button type="submit" class="bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-700 transition-colors duration-200">
                Save Changes
            </button>
        </div>
    </form>
</div>
