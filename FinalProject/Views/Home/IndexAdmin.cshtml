@model FinalProject.Core.Application.Models.HomeViewStatisticsModel

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Admin Dashboard</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-blue-100 p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-2 text-blue-800">Registered Properties</h2>
            <p class="text-2xl font-bold text-blue-600">@Model.AmountOfProperties</p>
        </div>

        <div class="bg-green-100 p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-2 text-green-800">Active Agents</h2>
            <p class="text-2xl font-bold text-green-600">@Model.AmountOfActiveAgentUsers</p>
        </div>

        <div class="bg-red-100 p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-2 text-red-800">Inactive Agents</h2>
            <p class="text-2xl font-bold text-red-600">@Model.AmountOfInActiveAgentUsers</p>
        </div>

        <div class="bg-yellow-100 p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-2 text-yellow-800">Active Clients</h2>
            <p class="text-2xl font-bold text-yellow-600">@Model.AmountOfActiveClienUsers</p>
        </div>

        <div class="bg-gray-100 p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-2 text-gray-800">Inactive Clients</h2>
            <p class="text-2xl font-bold text-gray-600">@Model.AmountOfInActiveClientUsers</p>
        </div>

        <div class="bg-teal-100 p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-2 text-teal-800">Active Developers</h2>
            <p class="text-2xl font-bold text-teal-600">@Model.AmountOfActiveDeveloperUsers</p>
        </div>

        <div class="bg-purple-100 p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-2 text-purple-800">Inactive Developers</h2>
            <p class="text-2xl font-bold text-purple-600">@Model.AmountOfInActiveDeveloperUsers </p>
        </div>
    </div>
</div>
