@{
    ViewData["Title"] = "Contact";
}

<div class="relative py-12 bg-gradient-to-r from-indigo-400 via-blue-400 to-teal-400">
    <div class="relative container mx-auto px-6">
        <h1 class="text-4xl font-extrabold text-center text-white mb-8">Contact Us</h1>
        <div class="flex flex-col lg:flex-row lg:justify-between">
            <!-- Contact Information -->
            <div class="w-full lg:w-1/3 bg-white p-6 rounded-lg shadow-lg mb-8 lg:mb-0">
                <h2 class="text-2xl font-semibold text-gray-800 mb-4">Get in Touch</h2>
                <p class="text-gray-600 mb-4">If you have any questions, feel free to reach out to us. We look forward to hearing from you!</p>
                <ul class="text-gray-700">
                    <li class="flex items-center mb-3">
                        <i class="fas fa-map-marker-alt text-indigo-600 mr-3"></i>
                        <span>1234 Real Estate Blvd, Suite 100, Cityville, ST 12345</span>
                    </li>
                    <li class="flex items-center mb-3">
                        <i class="fas fa-phone-alt text-indigo-600 mr-3"></i>
                        <span>(123) 456-7890</span>
                    </li>
                    <li class="flex items-center mb-3">
                        <i class="fas fa-envelope text-indigo-600 mr-3"></i>
                        <span>contact@chequeando.com</span>
                    </li>
                </ul>
            </div>

            <!-- Contact Form -->
            <div class="w-full lg:w-2/3 bg-white p-6 rounded-lg shadow-lg">
                <h2 class="text-2xl font-semibold text-gray-800 mb-4">Send Us a Message</h2>
                <form action="/contact" method="post">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                        <div>
                            <label for="name" class="block text-gray-700 text-sm font-semibold mb-2">Name</label>
                            <input type="text" id="name" name="name" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600" placeholder="Your name" required>
                        </div>
                        <div>
                            <label for="email" class="block text-gray-700 text-sm font-semibold mb-2">Email</label>
                            <input type="email" id="email" name="email" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600" placeholder="Your email" required>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label for="message" class="block text-gray-700 text-sm font-semibold mb-2">Message</label>
                        <textarea id="message" name="message" rows="4" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600" placeholder="Your message" required></textarea>
                    </div>
                    <button type="submit" class="w-full bg-indigo-600 text-white p-3 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-600">
                        Send Message
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
